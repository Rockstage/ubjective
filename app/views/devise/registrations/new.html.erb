<h2>Welcome to ubjective!</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <legend>Join an ecosystem of people and projects working hard to change the world.</legend>
  	<%= f.input :first_name, :autofocus => true, input_html: { class: 'input-xxlarge' } %>
  	<%= f.input :last_name, input_html: { class: 'input-xxlarge' } %>
  	<%= f.input :profile_name, :required => true, input_html: { class: 'input-xxlarge' }, hint: "Cannot be changed later" %>
    <%= f.input :email, :required => true, input_html: { class: 'input-xxlarge' }, hint: "Cannot be changed later" %>
    <%= f.input :birthday, as: :date, start_year: Date.today.year - 12,
                           end_year: Date.today.year - 90, order: [:day, :month, :year], input_html: { } %>
    <%= f.input :password, :required => true, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :password_confirmation, :required => true, input_html: { class: 'input-xxlarge' } %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-success' %> |
    <%= link_to "Privacy Policy", "#" %><br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>


