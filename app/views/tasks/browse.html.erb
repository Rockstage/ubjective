<h1>Browse cool task shared by other users!</h1>
<hr />

<% @tasks.each do |task| %>
<% if task.user.id %>
	<blockquote>
	<h3><%= task.title %></h3><p><em><%= task.description %></em></p>
	<small>Shared by: <em><%= task.user.profile_name %></em> | Original author: <em><%= task.author %> &copy;</em> | Last update: <%= time_ago_in_words(task.updated_at) + " ago" %></small>

	<%= link_to 'Do it!', clone_task_path(task), class: 'btn btn-small btn-primary' %>

	<hr />
	</blockquote>
<% end %>
<% end %>